<?xml version="1.0" encoding="utf-8"?><extension type="module" version="1.0" method="upgrade">	<!-- Module name -->     <name>FL Items Template</name>         <!-- Optional  -->     <creationDate>2019-04-23</creationDate>     <author>Fine Line Websites</author>     <authorEmail>info@finelineit.com</authorEmail>     <authorUrl>http://www.finelinewebsites.com</authorUrl>     <copyright>Copyright Info</copyright>     <license>License Info</license>           <version>2.0.0</version>     <!-- Optional  -->    	<files>		<filename module="mod_fl_items_template">mod_fl_items_template.php</filename>		<filename>mod_fl_items_template.xml</filename>		<filename>index.html</filename>		<folder>tmpl</folder>		<filename>tmpl/default.php</filename>		<filename>tmpl/index.html</filename>	</files>	<config>				<fields name="params">			<fieldset name="basic">				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" />				<field 		 			name="item_category_id" 		 			type="sql" 		 			default="" 		 			label="Select a Category" 		 			query="SELECT 0 AS value, 'Show All' AS item_category_id UNION ALL SELECT item_category_id AS value, `name` AS item_category_id FROM #__fl_items_category">				</field>				<field 		 			name="item_id" 		 			type="sql" 		 			default="" 		 			label="Select an Item" 		 			query="SELECT 0 AS value, 'Show All' AS item_id UNION ALL SELECT item_id AS value, `name` AS item_id FROM #__fl_items">				</field>							<field name="search_params" type="text" default="" description="Example: state=de&amp;price=100000-200000&amp;prop3=value3" label="Search Params" size="100"></field>				<field name="template" type="text" default="" description="" label="Template Name" size="100"></field>				<field name="ordering" type="text" default="" description="Enter 'name' to sort by name." label="Ordering" size="100"></field>				<field name="limit" type="text" default="" description="Number of items to show" label="Number of Items" size="100"></field>				<field name="featured_only" type="list" default="0" description="" label="Only Show Featured Items?">					<option value="0">No</option>					<option value="1">Yes</option>				</field>			</fieldset>		</fields>	</config></extension>